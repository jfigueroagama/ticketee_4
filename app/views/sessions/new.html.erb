<h1>Sign in</h1>
<!-- :signin makes the form link to signin_path and changes the HTTP method to POST -->
<%= form_for :signin, method: "POST" do |f| %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</p>
	<%= f.submit "Sign in" %>
<% end %>